<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_restaurant_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_restaurant_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/item_restaurant_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/item_restaurant_title_tv" />

    <TextView
        android:id="@+id/item_restaurant_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/item_restaurant_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_restaurant_title_tv" />

    <ImageView
        android:id="@+id/item_restaurant_heart_iv"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/btnOriginal"
        app:layout_constraintTop_toTopOf="@+id/btnOriginal"
        app:srcCompat="@drawable/heart_icon" />

    <EditText
        android:id="@+id/edit_memo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="메모 추가하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_restaurant_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_restaurant_address_tv" />

    <Button
        android:id="@+id/memo_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="메모"
        app:layout_constraintTop_toTopOf="@+id/edit_memo"
        app:layout_constraintStart_toEndOf="@+id/edit_memo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOriginal"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnOriginal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="사진 남기기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_memo" />

</androidx.constraintlayout.widget.ConstraintLayout>